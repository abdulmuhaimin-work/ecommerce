<%= form_for(product, remote: true, html: { id: "product-create-form" }) do |f| %>
  <h1 class="text-center">
    Create product
  </h1>

  <div class="form-group">
    <h4> <%= f.label :name_field, "Name" %> </h4>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <h4> <%= f.label :text_field, "Price" %> </h4>
    <%= f.number_field :price, class: 'form-control', :step => 'any' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Create product", class: "btn btn-success btn-lg" %>
  </div>
<% end %>
